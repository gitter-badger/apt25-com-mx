@import "sanitize"
@import "helpers"

$pcols = 10
$gutter = 28px
$container = 1200px

.container
  margin: 0 auto
.container-large
  width: 100%
.container-medium
  width: $container*0.80
.container-small
  width: $container*0.64
.row
  clear: both
  margin-bottom: 1em
.col
  float: left
  padding: 0 ($gutter/2)
  box-sizing: border-box
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-small = 16px
$font-size-basic = 21px
$font-size-medium = 30px
$font-size-header = 36px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(255,255,255)

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: $font-size-header

h2
  font-size: $font-size-medium

h3
  font-size: $font-size-basic

p
  margin-bottom: 1em
  
.date
  font-size: $font-size-small
  
.fa 
  line-height: 1.3
  


// LINKS

a,a:active,a:visited
  color:inherit


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header 
  width: 100%
  font-size: $font-size-basic
  margin: $margin-small 0
  
.logo
  display: inline-block
  height: $margin-large
  float: left
  svg
    height: 100%
    
.main-menu
  display: inline-block
  float: right
  font-size: 18px
  text-align: right
  li
    display: inline-block
    margin: 0 ($margin-small/2)

// POSTS LOOP
#posts
  width: 100%
  
article
  margin: 0 0 $margin-large
  
.type-post
  h2
    margin-bottom: 1em

.post
  width: 100%

#pagination
  width: 100%


// FOOTER

#footer
  width: 100%
  font-size: $font-size-basic
  padding: $margin-small 0
  border-top: 1px solid $color-black-soft

.footer-social
  text-align: right

